<div id="carouseSlideShow" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/imgs/plovdiv.jpg" alt="Plovdiv" />
        </div>
        <div class="carousel-item ">
            <img class="d-block w-100" src="~/imgs/bansko.jpg" alt="Bansko" />
        </div>
        <div class="carousel-item ">
            <img class="d-block w-100" src="~/imgs/varna.jpg" alt="Varna" />
        </div>
    </div>
</div>
<script>
    var slideShow = function (container) {
        this.img = [];
        this.curlImg = 0;
        for (var i = 0; i < container.childElementCount; i++) {
            this.img.push(container.children[i])
            this.img[i].style.display = "none";
        }

        var nextSlide = function () {
            for (var i = 0; i < this.img.length; i++) {
                this.img[i].style.display = "none";
            }
            this.img[this.curlImg].style.display = "block";
            this.curlImg++;
            if (this.curlImg >= this.img.length) {
                this.curlImg = 0;
            }
            window.setTimeout(nextSlide.bind(this), 1000);
        };

        nextSlide.call(this);
    };

    slideShow(document.getElementById('slideshow'))
    slideShow(document.getElementById('carouseSlideShow'))
    
</script>